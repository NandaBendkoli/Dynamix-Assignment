<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Checklist Dashboard</title>
    <link rel="stylesheet" href="/css/style.css" />

  </head>
  <body>
    <h1>Checklist Dashboard</h1>
    <table>
      <thead>
        <tr>
          <th>Rule</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% checklistResults.forEach(result => { %>
        <tr>
          <td><%= result.rule %></td>
          <td class="<%= result.passed ? 'passed' : 'failed' %>">
            <%= result.passed ? 'Passed' : 'Failed' %>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
